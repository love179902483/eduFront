{
  "compilerOptions": {
    "strictPropertyInitialization":false,
    "plugins": [{
      "configFile": "tslint.json",
      "name": "typescript-tslint-plugin",
      "alwaysShowRuleFailuresAsWarnings": true
    }],
    "typeRoots": [                           /* List of folders to include type definitions from. */
      "/src/globaltype/",
    ],    
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "mocha",
      "chai",
      "vuetify",
      "...",
      "globaltype",
      "user",
      "mQuery"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "files": [
    "/src/globaltype/user.d.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/globaltype/*.d.ts",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],

}